{
  "compilerOptions": {
    "paths": {
      "@common-types": [
        "./src/types"
      ],
      "@common-types/*": [
        "./src/types/*"
      ],
      "@repositories": [
        "./src/database/repositories"
      ],
      "@repositories/*": [
        "./src/database/repositories/*"
      ],
      "@event-stores": [
        "./src/database/event-stores"
      ],
      "@event-stores/*": [
        "./src/database/event-stores/*"
      ]
    },
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "tests/**/*",
    "./jest.config.ts",
    "./global.d.ts"
  ]
}
